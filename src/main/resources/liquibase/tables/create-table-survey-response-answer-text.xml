<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<changeSet onValidationFail="MARK_RAN" failOnError="true"
		author="simplesolutions" id="1548117768533">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="survey_response_answer_text_" />
			</not>
		</preConditions>
		<createTable tableName="survey_response_answer_text_">
			<column name="ID_" type="BIGINT">
				<constraints nullable="false" primaryKey="true" />
			</column>
			<column name="ACTIVE_" type="BIT(1)" />

			<column name="SURVEY_ID_" type="BIGINT" />
			<column name="QUESTION_ID_" type="BIGINT" />
			<column name="RESPONSE_ID_" type="BIGINT" />
			<column name="RESPONSE_" type="VARCHAR(4000)" />
		</createTable>
	</changeSet>
	<changeSet onValidationFail="MARK_RAN" failOnError="true"
		author="simplesolutions" id="1548117777811">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="survey_response_answer_text_aud" />
			</not>
		</preConditions>
		<createTable tableName="survey_response_answer_text_aud">
			<column name="ID_" type="BIGINT">
				<constraints nullable="false" />
			</column>
			<column name="REV" type="BIGINT">
				<constraints nullable="false" />
			</column>
			<column name="REVISION_TYPE" type="TINYINT" />
			<column name="ACTIVE_" type="BIT(1)" />

			<column name="SURVEY_ID_" type="BIGINT" />
			<column name="QUESTION_ID_" type="BIGINT" />
			<column name="RESPONSE_ID_" type="BIGINT" />
			<column name="RESPONSE_" type="VARCHAR(4000)" />
		</createTable>
	</changeSet>

</databaseChangeLog>