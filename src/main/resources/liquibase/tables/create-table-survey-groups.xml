<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<changeSet onValidationFail="MARK_RAN" failOnError="true"
		author="simplesolutions" id="1548551035413">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="survey_groups_" />
			</not>
		</preConditions>
		<createTable tableName="survey_groups_">
			<column name="ID_" type="BIGINT">
				<constraints nullable="false" />
			</column>
			<column name="ACTIVE_" type="BIT(1)" />

			<column name="SURVEY_ID_" type="BIGINT" />
			<column name="NAME_" type="VARCHAR(4000)" />
			<column name="DESCRIPTION_" type="VARCHAR(4000)" />
		</createTable>
	</changeSet>
	<changeSet onValidationFail="MARK_RAN" failOnError="true"
		author="simplesolutions" id="1548551043809">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="survey_groups_aud" />
			</not>
		</preConditions>
		<createTable tableName="survey_groups_aud">
			<column name="ID_" type="BIGINT">
				<constraints nullable="false" />
			</column>
			<column name="REV" type="BIGINT">
				<constraints nullable="false" />
			</column>
			<column name="REVISION_TYPE" type="TINYINT" />
			<column name="ACTIVE_" type="BIT(1)" />

			<column name="SURVEY_ID_" type="BIGINT" />
			<column name="NAME_" type="VARCHAR(4000)" />
			<column name="DESCRIPTION_" type="VARCHAR(4000)" />
		</createTable>
	</changeSet>

	<!-- Create pinned column -->
	<changeSet onValidationFail="MARK_RAN" failOnError="true"
		author="simplesolutions" id="1549403950699">
		<preConditions onError="HALT">
			<not>
				<columnExists tableName="survey_groups_" columnName="PINNED_" />
			</not>
		</preConditions>
		<addColumn tableName="survey_groups_">
			<column name="PINNED_" type="BIT(1)"></column>
		</addColumn>
		<addColumn tableName="survey_groups_aud">
			<column name="PINNED_" type="BIT(1)"></column>
		</addColumn>
	</changeSet>
	
	<!-- Create enable_applicability_ column -->
	<changeSet onValidationFail="MARK_RAN" failOnError="true"
		author="simplesolutions" id="1555459506058">
		<preConditions onError="HALT">
			<not>
				<columnExists tableName="survey_groups_" columnName="ENABLE_APPLICABILITY_" />
			</not>
		</preConditions>
		<addColumn tableName="survey_groups_">
			<column name="ENABLE_APPLICABILITY_" type="BIT(1)"></column>
		</addColumn>
		<addColumn tableName="survey_groups_aud">
			<column name="ENABLE_APPLICABILITY_" type="BIT(1)"></column>
		</addColumn>
	</changeSet>

</databaseChangeLog>